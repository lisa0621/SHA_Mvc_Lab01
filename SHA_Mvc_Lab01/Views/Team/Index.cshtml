@model IEnumerable<MotoGP.ViewModels.Team.TeamItemViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="well">
    <button class="btn btn-primary" data-toggle="modal" data-target="#UploadModal">
        Import Excel
    </button>
    <button class="btn btn-primary" id="ButtonExport" name="ButtonExport">
        Export Excel
    </button>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bike)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bike)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>

@Html.Partial("_UploadFile")

@section scripts
{
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script src="~/Scripts/project.js"></script>
    <script src="~/Scripts/project.extends.js"></script>
    <script src="~/Scripts/project.Team.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var actionUrls = {
                Upload: '@Url.Action("Upload", "Team")',
                Import: '@Url.Action("Import", "Team")',
                HasData: '@Url.Action("HasData", "Team")',
                ExportData: '@Url.Action("Export", "Team")'
            };
            project.Team.Initialize(actionUrls);
        });
    </script>
}